<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <RelativeLayout
        android:id="@+id/rl_actionBar"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:background="@color/colorGray" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorGray" />

        <ImageView
            android:id="@+id/iv_rowBottomSheet_Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ico_close"
            android:backgroundTint="@color/colorGray"
            android:padding="15dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="5sp"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:id="@+id/bt_bottom_whatsApp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bottom_sheet_button_shape"
            android:elevation="3dp">

            <ImageView
                android:id="@+id/iv_whatsAppLogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/whatsapp_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/iv_whatsAppArrow"
                android:layout_toRightOf="@+id/iv_whatsAppLogo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="WhatsApp"
                    android:textColor="@color/colorGreenish"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Download WhatsApp Status"
                    android:textColor="@color/colorGreenish"
                    android:textSize="12dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_whatsAppArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ic_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_facebook_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rectangle"
            android:elevation="3dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_facebookLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/fb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/iv_facebookArrow"
                android:layout_toRightOf="@+id/iv_facebookLogo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Facebook"
                    android:textColor="@color/colorGreenish"
                    android:textSize="22dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Download Facebook Video"
                    android:textColor="@color/colorGreenish"
                    android:textSize="12dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_facebookArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ic_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bt_bottom_gbWhatsApp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bottom_sheet_button_shape"
            android:elevation="3dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_instagramLogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ico_gb_whats_app" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/iv_instagramArrow"
                android:layout_toRightOf="@+id/iv_instagramLogo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="GB WhatsApp"
                    android:textColor="@color/colorGreenish"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Download Instagram Video"
                    android:textColor="@color/colorGreenish"
                    android:textSize="12dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_instagramArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ic_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bt_bottom_business"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bottom_sheet_button_shape"
            android:elevation="3dp">

            <ImageView
                android:id="@+id/iv_aboutUsLogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ico_business" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/iv_aboutUsArrow"
                android:layout_toRightOf="@+id/iv_aboutUsLogo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Business WhatsApp"
                    android:textColor="@color/colorGreenish"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Know more about app"
                    android:textColor="@color/colorGreenish"
                    android:textSize="12dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_aboutUsArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ic_arrow" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>