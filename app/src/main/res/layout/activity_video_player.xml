<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoPlayer.VideoPlayerActivity">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorGreen">

        <ImageView
            android:id="@+id/iv_videoPlayer_back"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8sp"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_videoPlayer_videoPath"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_videoPlayer_back"
            android:gravity="center_vertical"
            android:text="hello"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <VideoView
        android:id="@+id/vv_VideoPlayer_playVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/action_bar" />

</RelativeLayout>